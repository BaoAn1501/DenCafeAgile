<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/bg_buttom_dialog"
    android:orientation="vertical">
    <ImageView
        android:layout_margin="20dp"
        android:src="@drawable/synchronize"
        android:layout_gravity="center"
        android:layout_width="128dp"
        android:layout_height="128dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilOldPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOldPass"
            android:hint="Mật khẩu hiện tại"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNewPass"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNewPass"
            android:hint="Mật khẩu mới"
            android:inputType="number"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirmPass"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtConfirmPass"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="number"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvChangePass"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/Brown"
        android:layout_width="200dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tvCardAddProduct"
            android:layout_gravity="center"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>