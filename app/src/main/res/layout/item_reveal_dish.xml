<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    android:background="@color/fui_transparent"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/cvDishItem">
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragEdge="right"
        app:mode="same_level"
        android:id="@+id/swipLayoutDishItem">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvEditDishItem"
            android:outlineSpotShadowColor="@color/Green"
            android:layout_margin="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_edit_24_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDelDishItem"
            android:outlineSpotShadowColor="@color/Red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="8dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civDishItem"
                android:src="@drawable/logoicon"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="88dp"
                android:layout_height="88dp"/>

            <TextView
                android:id="@+id/nameDishItem"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/civDishItem"
                android:text="Đang tải"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/typeDishItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameDishItem"
                android:layout_toEndOf="@+id/civDishItem"
                android:text="Đang tải"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/Gray"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/priceDishItem"
                android:text="đang tải"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Green"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
</androidx.cardview.widget.CardView>