<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvTypeItem">
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragEdge="right"
        app:mode="same_level"
        android:id="@+id/swipLayoutTypeItem">
    <LinearLayout
        android:id="@+id/layoutSwipe"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvEditTypeItem"
            android:outlineSpotShadowColor="@color/Green"
            android:layout_margin="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDelTypeItem"
            android:outlineSpotShadowColor="@color/Red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="8dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civTypeItem"
            android:src="@drawable/logoicon"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="88dp"
            android:layout_height="88dp"/>
        <TextView
            android:id="@+id/nameTypeItem"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/civTypeItem"
            app:layout_constraintLeft_toRightOf="@id/civTypeItem"
            app:layout_constraintTop_toTopOf="@+id/civTypeItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</androidx.cardview.widget.CardView>