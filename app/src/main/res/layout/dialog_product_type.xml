<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@drawable/bg_buttom_dialog"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivAddType"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginVertical="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logoicon"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/white"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNameAddType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietNameAddType"
            android:hint="Tên loại món"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvAddType"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/Brown"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tvCardAddType"
            android:layout_gravity="center"
            android:text="Thêm loại"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>